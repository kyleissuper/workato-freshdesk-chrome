{
    "manifest_version": 2,
    "name": "Workato - Freshdesk",
    "version": "6.0",
    "description": "Makes Freshdesk better for customer success",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        },
        "default_title": "Workato - Freshdesk",
        "default_popup": "html/popup.html"
    },
    "permissions": ["https://support.workato.com/"],
    "content_scripts": [
        {
            "matches": ["https://support.workato.com/*"],
            "js": [
                "js/scripts.min.js"
                ],
            "css": ["css/main.css"]
        }
    ]
}
